<!-- views/updateUser.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <%- include("../views/partials/error.ejs") %>
    <form action="/<%= user.id %>/update" method="POST">
      <input
        type="text"
        name="firstName"
        id="firstName"
        required
        value="<%= user.firstName %>"
      />
      <input
        type="text"
        name="lastName"
        id="lastName"
        required
        value="<%= user.lastName %>"
      />

      <input
        type="email"
        name="email"
        id="email"
        required
        value="<%= user.email %>"
      />
      <input type="number" name="age" id="age" value="<%= user.age %>" />
      <input type="text" name="bio" id="bio" value="<%= user.bio %>" />
      <button type="submit">Update User</button>
    </form>
    <a href="/">Back to home</a>
  </body>
</html>
